GLOBAL{
	RUN_MODE       = 0   //0是自动，1是CPU，2是GPU_CUDA
	IMAGE_CHNANEL  = 1   //照片通道（Gray是1，rgb是3）
	IMAGE_DIM      = 28  //照片维度
	ACTIVEFUN_TYPE = 2   //1是soft_plus,2是relu激活函数
	MAX_SAVE_COUNT = 40  //训练到指定次数保存模型并继续训练
	DATASET_PATH   = D:\DataSets\mnist
}

MINI_SGD{
	ALPHA=0.05
	MOMENTUM=0.9
	MINI_BATCH=200
	EPOCHES=30
}

CNN{

[
	LayerType=CONV
	NAME=CONV1
	NUM_FEATURE=10
	KERNEL_SIZE=5
	WEIGHT_DECAY=1e-6	
]

[
	LayerType=POOL
	NAME=POOL1
	INPUT_NAME=CONV1
	KERNEL_SIZE=2
	POOL_TYPE=MAX_POOL
]

[
	LayerType=CONV
	NAME=CONV2
	INPUT_NAME=POOL1
